#ifndef BLACKJACK_H_
#define BLACKJACK_H_
#include <stdlib.h>

#define DECK_SIZE 52
typedef struct card {
	enum  {Heart, Diamond, Spade, Club} face;
	enum   {red, black} color;
	unsigned int value;

} card;
card *deck;

card *init_deck();

void add_card(card *card);

card *remove_card(card *card);

bool check_card(card *card);

card *deal_card();
#endif /* BLACKJACK_H_ */
