#include "blackjack.h"

void init_deck(card **deck) {

	/**
	 * 0-12 	Red Hearts
	 * 13-25 	Red Diamonds
	 * 27-40	Black Spade
	 * 41-51	Black Club
	 */

	for (unsigned int i = 0; i < 12; i++) {
		unsigned int card_val = i + 1;
		//Red Hearts
		deck[i] = (card *) malloc(sizeof(card));
		deck[i]->suit = red;
		deck[i]->face = Heart;
		deck[i]->value = card_val;

		//Red Diamonds
		deck[i + 12] = (card *) malloc(sizeof(card));
		deck[i + 12]->suit = red;
		deck[i + 12]->face = Diamond;
		deck[i + 12]->value = card_val;

		//Black Spade
		deck[i + 24] = (card *) malloc(sizeof(card));
		deck[i + 24]->suit = black;
		deck[i + 24]->face = Spade;
		deck[i + 24]->value = card_val;

		//Black Club
		deck[i + 36] = (card *) malloc(sizeof(card));
		deck[i + 36]->suit = black;
		deck[i + 36]->face = Club;
		deck[i + 36]->value = card_val;
	}

}

