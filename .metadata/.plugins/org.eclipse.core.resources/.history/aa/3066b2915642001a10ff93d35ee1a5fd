#include "blackjack.h"

void init_deck(card *deck) {

	for (unsigned int i = 0; i < 12; i++) {

		//Red Hearts
		deck[i].color = red;
		deck[i].face = Heart;
		deck[i].value = i;
		//Red Diamonds
		deck[i + 12].color = red;
		deck[i + 12].face = Heart;
		deck[i + 12].value = i;
	}

}

