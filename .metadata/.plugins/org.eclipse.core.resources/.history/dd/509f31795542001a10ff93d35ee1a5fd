#include "blackjack.h"

card *init_deck() {
	//Allocate enough memory for 52 cards on the heap
	deck = (card *) (malloc(sizeof(card) * 52));

	//Red heards 1st
	for (unsigned int i = 0; i < 12; i++) {

		switch (i) {
			//Ace case, we will treat it as both a value of 1 and 11 in other areas
			case 0:
				deck[i].color= red;
				deck[i].face = Heart;
	}
}
}
