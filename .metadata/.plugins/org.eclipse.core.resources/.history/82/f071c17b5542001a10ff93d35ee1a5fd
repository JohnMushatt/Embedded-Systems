#include "blackjack.h"

card *init_deck() {
	//Allocate enough memory for 52 cards on the heap
	deck = (card *) (malloc(sizeof(card) * 52));

	for (unsigned int i = 0; i < 12; i++) {

		//Red Hearts
		deck[i].color = red;
		deck[i].face = Heart;
		deck[i].value = i;
		//Red Diamonds
		deck[i+1*2].color = red;
		deck[i+1*2].face = Heart;
		deck[i+1*2].value = i;
	}
}
}
