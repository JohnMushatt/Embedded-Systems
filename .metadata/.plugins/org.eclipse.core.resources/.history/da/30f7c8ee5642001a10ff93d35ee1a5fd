#include "blackjack.h"

void init_deck(card *deck) {

	/**
	 * 0-12 	Red Hearts
	 * 13-26 	Red Diamonds
	 * 27-40	Black Spade
	 * 41-51	Black Club
	 */

	for (unsigned int i = 0; i < 12; i++) {

		//Red Hearts
		deck[i].color = red;
		deck[i].face = Heart;
		deck[i].value = i;
		//Red Diamonds
		deck[i + 13].color = red;
		deck[i + 13].face = Heart;
		deck[i + 13].value = i;
	}

}

